<uib-accordion-group is-open="forumStatus.open">
  <uib-accordion-heading>
    Forums
    <i class="pull-right glyphicon" ng-class="{'glyphicon-chevron-down': forumStatus.open, 'glyphicon-chevron-right': !forumStatus.open}"></i>
  </uib-accordion-heading>

  <div id="table-banner">
    <% if current_user %>
        <div>
          <nav class="navbar navbar-default">
            <div class="container-fluid">
              <div class="navbar-header">
                <span class="label label-danger favorites-title">Favorite Forums</span>
              </div>
              <div class="navbar-body">
                <span ng-repeat="forum in favoriteForums" ng-click="selectForum(forum.name, forum.id, forum.category, $event)" class="forum-item panel-title">{{forum.name}}</span>
              </div>
            </div>
          </nav>
        </div>
    <% end %>
  </div>

  <div>
    <div id="categoriesTableDiv" class="table-div">
      <table id="categoriesTable"></table>
    </div>
  </div>

</uib-accordion-group>