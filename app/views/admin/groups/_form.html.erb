<div ng-app="forumAdmin">
  <div ng-controller="FormController">
    <%= simple_form_for([:admin, @group], html: {"name" => "create_group_form"}) do |f| %>
        <div class="input-group">
          <div class="input string required">
            <label for="group_name" class="string required">
              <abbr title="required">*</abbr> Name
            </label>

            <input type="text" ng-model="group_name" name="name" id="group_name" class="string required form-control ng-valid ng-dirty ng-valid-parse ng-touched" required>
          </div>
        </div>
        <input type="submit" value="Submit" ng-show="!create_group_form.name.$error.required" name="commit" style="margin-top: 15px" class="btn btn-primary">
    <% end %>
  </div>
</div>
