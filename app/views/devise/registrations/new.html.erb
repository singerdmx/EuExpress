<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-signin'}, defaults: { input_html: { class: 'form-control' } }) do |f| %>
    <%= f.error_notification %>
    <h2 class="form-signin-heading">Sign up</h2>
    <%= f.input :email, required: true, autofocus: true,input_html: { placeholder: 'Email Address' } %>

    <% password_placeholder = 'Password' %>
    <% if @minimum_password_length %>
        <% password_placeholder += " (#{@minimum_password_length} characters minimum)" %>
    <% end %>
    <%= f.input :password, required: true, input_html: { placeholder: password_placeholder } %>
    <%= f.input :password_confirmation, required: true, input_html: { placeholder: 'Password Confirmation' } %>

    <button type="submit" class="btn btn-lg btn-primary btn-block">Sign up</button>
<% end %>

<%= render "devise/shared/links" %>
